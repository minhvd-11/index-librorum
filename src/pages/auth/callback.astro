---
import { supabase } from "~/lib/supabase";

const {
  data: { user },
} = await supabase.auth.getUser();

if (user) {
  // Redirect to learn page after successful authentication
  Astro.redirect("/learn");
} else {
  // Redirect to home if authentication fails
  Astro.redirect("/");
}
