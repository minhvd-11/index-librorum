---
import Layout from "../layouts/Layout.astro";
import Flashcard from "../components/Flashcard";
import type { Word } from "~/types";

const response = await fetch("http://localhost:4321/api/words");
const words: Word[] = await response.json();
---

<Layout title="Learn Words">
  <div class="container mx-auto p-4 grid gap-4 md:grid-cols-2">
    {words.map((word) => <Flashcard client:load word={word} />)}
  </div>
</Layout>
