{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": [
      "@astrojs/ts-plugin",
      "node",
      "vite/client"
    ]
  },
  "include": [
    "src/**/*",
    "astro.config.mjs",
    "src/env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}